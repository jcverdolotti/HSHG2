<h2 align="center">Registrarse</h2>

<div class: 'container' style="margin-left: 15px; margin-right: 15px;">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="form-group" >
            <%= f.label :name, 'Nombre', margin: 3 %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Ingrese el nombre de usuario',
                required: true %>
        </div>

      <div class="field">
        <%= f.label :last_name, 'Apellido' %>
        <%= f.text_field :last_name, class: 'form-control', autofocus: true, autocomplete: "last_name",placeholder: 'Ingrese apellido',
                required: true %>
      </div>
      <p></p>


      <div class="field">
        <%= f.label :genre, 'Genero' %>
         <%= f.select :genre, options_for_select(['Masculino','Femenino']), {include_blank: 'Seleccionar...'}, {class: 'form-control', required: true}%>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :age, 'Edad (mayor a 18)'%><br />
        <%= f.text_field :age, class: 'form-control', autofocus: true, autocomplete: "date",placeholder: 'Ingrese edad',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email",placeholder: 'Ingrese correo electronico',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :card_number, 'Numero de tarjeta' %><br />
        <%= f.text_field :card_number, class: 'form-control', autofocus: true,placeholder: 'Ingrese número de la tarjeta',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :card_SC ,'Codigo de seguridad de la tarjeta' %><br />
        <%= f.text_field :card_SC, class: 'form-control', autofocus: true,placeholder: 'Ingrese codigo de seguridad de la tarjeta',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :card_expDate,'Fecha de expiracion' %><br />
        <%= f.date_field :card_expDate, {class: "form-control", required: true}%>
        
      </div>
      <p></p>

      <div class="field">
        <%= f.label :password, 'Contraseña' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password",placeholder: 'Ingrese su contraseña',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :password_confirmation, 'Confirmar contraseña' %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password",placeholder: 'Confirme su contraseña',
                required: true %>
      </div>
      <p></p>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-warning"%>
      </div>
    <% end %>
    </div>

<%= render "users/shared/links" %>
