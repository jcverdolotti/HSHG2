<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="form-group" >
            <%= f.label :name, 'Nombre', margin: 3 %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Ingrese el nombre de usuario',
                required: true %>
        </div>

      <div class="field">
        <%= f.label :last_name, 'Apellido' %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :genre, 'Genero' %><br />
        <%= f.text_field :genre, autofocus: true, autocomplete: "genre" %>
      </div>
      
      <div class="field">
        <%= f.label :age, 'Edad'%><br />
        <%= f.text_field :age, autofocus: true, autocomplete: "date" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
        
      <div class="field">
        <%= f.label :card_number, 'Numero de tarjeta' %><br />
        <%= f.text_field :card_number ,autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :card_SC ,'Codigo de seguridad de la tarjeta' %><br />
        <%= f.text_field :card_SC ,autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :card_expDate,'Fecha de expiracion' %><br />
        <%= f.text_field :card_expDate ,autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

<%= render "users/shared/links" %>
