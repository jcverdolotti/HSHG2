<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

   <div class="form-group" >
            <%= f.label :name, 'Nombre', margin: 3 %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Ingrese el nombre de usuario',
                required: true %>
        </div>

      <div class="field">
        <%= f.label :last_name, 'Apellido' %>
        <%= f.text_field :last_name, class: 'form-control', autofocus: true, autocomplete: "last_name",placeholder: 'Ingrese apellido',
                required: true %>
      </div>
      <p></p>


      <div class="field">
        <%= f.label :genre, 'Genero' %>
         <%= f.select :genre, options_for_select(['Masculino','Femenino']), {include_blank: 'Seleccionar...'}, {class: 'form-control', required: true}%>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :age, 'Edad'%><br />
        <%= f.text_field :age, class: 'form-control', autofocus: true, autocomplete: "date",placeholder: 'Ingrese edad',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email",placeholder: 'Ingrese correo electronico',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :card_number, 'Numero de tarjeta' %><br />
        <%= f.text_field :card_number, class: 'form-control', autofocus: true,placeholder: 'Ingrese número de la tarjeta',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :card_SC ,'Codigo de seguridad de la tarjeta' %><br />
        <%= f.text_field :card_SC, class: 'form-control', autofocus: true,placeholder: 'Ingrese codigo de seguridad de la tarjeta',
                required: true %>
      </div>
      <p></p>

      <div class="field">
        <%= f.label :card_expDate,'Fecha de expiracion' %><br />
        <%= f.date_field :card_expDate, {class: "form-control", required: true}%>
        
      </div>
      <p></p>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, 'Nueva contraseña'%> <i>(No completar si no desea cambiarla)</i>
     
    <% if @minimum_password_length %>
      <br />
      <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: 'Nueva contraseña' %>
   
    <% end %>
  </div>
  <p></p>

  <div class="field">
    <%= f.label :password_confirmation, 'Repetir contraseña'%><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: 'Confirme su nueva contraseña' %>
  </div>
  <p></p>

  <div class="field">
    <%= f.label :current_password, "Contraseña actual" %> <i>(Necesitamos su contraseña actual para confirmar sus cambios.)</i><br />
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password", placeholder: 'Contraseña actual' %>
  </div>
  <p></p>

  <div class="actions">
    <%= f.submit "Guardar cambios" , class: 'btn btn-success' %>
  </div>
<% end %>



<p> <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: 'btn btn-danger'%></p>

<%= link_to "Volver", :back %>
