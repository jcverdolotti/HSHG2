
<div class: 'container' style="margin-left: 15px; margin-right: 15px;">
<%= form_for @residence do |f| %>

    <div class="form-group" >
        <%= f.label :name, 'Título', margin: 3 %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Ingrese el título de la residencia',
            required: true %>
    </div>

    <div class="form-group" >
        <%= f.label :description, 'Descripción' %>
        <%= f.text_field :description, class: 'form-control', placeholder: 'Ingrese la descripción de la residencia',
            required: true %>
    </div>

    <div class="form-group" >
        <%= f.label :country, 'País' %>
        <%= f.text_field :country, class: 'form-control', placeholder: 'Ingrese el país de la residencia',
            required: true %>
    </div>

    <div class="form-group" >
        <%= f.label :province, 'Provincia/Estado' %>
        <%= f.text_field :province, class: 'form-control', placeholder: 'Ingrese la provincia/estado de la residencia',
            required: true %>
    </div>

    <div class="form-group" >
        <%= f.label :location, 'Dirección' %>
        <%= f.text_field :location, class: 'form-control', placeholder: 'Ingrese la dirección de la residencia',
            required: true %>
    </div>

    <div class="form-group" >
        <%= f.label :image, 'Imagen' %>
        <%= f.text_field :image, class: 'form-control', placeholder: 'Ingrese el "url" correspondiente a la imagen',
            required: true %>
    </div>

    <div class="form-group" >
     <%= f.label :cost, 'Costo semanal' %>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <%= f.number_field :cost, class: 'form-control', placeholder: 'Ingrese el costo de la residencia',
            required: true %>
        <div class="input-group-append">
          <span class="input-group-text">.00</span>
        </div>
      </div>
      </div>


    <div class="form-group" ">
      <%= f.label :people_amount, 'Huéspedes'%>
      <%= f.select :people_amount, options_for_select(['1','2','3','4','5','6','7','8']), {include_blank: 'Seleccionar...'}, {class: 'form-control', required: true}%>
    </div>

    <%= f.submit 'Guardar residencia', class: 'btn btn-primary' %>
    <%= link_to 'Volver', residences_path, class: 'btn default' %>
<% end %>
</div>
