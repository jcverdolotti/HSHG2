<h2>Residencias</h2>

<table class="table table-striped">
  
  <thead>
    <tr>
      <th width="5%" >#</th>
      <th width="20%">Residencia</th>
      <th width="10%">Reservada</th>
      <th width="10%">Eliminada</th>
      <th colspan="2"></th>
    </tr>

    <hr />

  </thead>

  <tbody>
    <% @residence.each do |residence| %>
      <tr>
        <td><%= residence.title %></td>
        <td><%= link_to 'Editar', edit_residence_path(residence), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Eliminar', residence, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Â¿Realmente deseas eliminar la residencia?' %></td>     
      </tr>   
  </tbody>

</table>

