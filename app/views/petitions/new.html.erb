
<%if current_user.user_type == 2%>
<h2> Ascender a Premium</h2>

<p> Ser Premium tiene sus beneficios: </p>

<ul class="list-unstyled">
<ul>
      <li>No esperes para realizar una reserva</li>
      <li>Asegúrate la residencia que desees</li>
      <li>Aún podrás participar de las subastas</li>
    </ul>
    </ul>

<div class: 'container' style="margin-left: 15px; margin-right: 15px;">
	<%= form_for @petition do |p| %>

    <div class="form-group" >
        <%= p.hidden_field :email, :value => current_user.email%>
    </div>

    <div class="form-group" >
      <%= p.hidden_field :current_uType, :value => current_user.user_type%>
      
    </div>

    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" required="true">
        <label class="form-check-label" for="exampleCheck1">Conozco los cambios de tarifa</label>
    </div> 
    <%= p.submit 'Crear Peticion', class: 'btn btn-primary', data: {confirm: 'Creará una petición para aumentar su membresía. Continuar?'}%>
    <%= link_to 'Volver', vista_path(current_user), class: 'btn default' %>

    <% end %>
</div>

<%elsif current_user.user_type == 3%>

<h2> Abandornar la categoria Premium</h2>

<div class: 'container' style="margin-left: 15px; margin-right: 15px;">
	<%= form_for @petition do |p| %>

    <div class="form-group" >
       <%= p.hidden_field :email, :value => current_user.email%>
    </div>

    <div class="form-group" >
      <%= p.hidden_field :current_uType, :value => current_user.user_type%>
    </div>
    
    <%= p.submit 'Crear Peticion', class: 'btn btn-danger', data: {confirm: 'Creará una petición para degradar s membresía. Continuar?'}%>
    <%= link_to 'Volver', vista_path(current_user), class: 'btn default' %>

    <% end %>
</div>

<% end %>
